<h1><center>Students Detail Update Page</center></h1>

<div style="margin-left: 20px;">



<%= form_with model: @student_detail do |form| %>
  <div>
   <%= form.label :roll_no %><br>
    <%= form.number_field :roll_no %>
  </div>
    <div>
   <%= form.label :user_id %><br>
    <%= form.number_field :user_id %>
  </div>
    <div>
   <%= form.label :class_detail_id %><br>
    <%= form.number_field :class_detail_id %>
  </div>
   <div>
   <%= form.label :class_name %><br>
   <%= form.select :class_name,["6th" , "7th", "8th", "9th", "10th"] %>
  </div>
    <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>